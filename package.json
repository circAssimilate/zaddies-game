{
  "name": "zaddies-game",
  "version": "1.0.0",
  "private": true,
  "description": "Texas Hold'em Poker game for friend groups",
  "scripts": {
    "dev": "pnpm run dev:build && concurrently \"pnpm:dev:frontend\" \"pnpm:dev:backend\" \"pnpm:dev:backend:watch\" --names \"frontend,emulator,backend\" --prefix-colors \"cyan,yellow,green\"",
    "dev:build": "pnpm --filter backend build",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "firebase emulators:start --config firebase.local.json",
    "dev:backend:watch": "pnpm --filter backend watch",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "check": "pnpm run format:check && pnpm run lint && pnpm test",
    "prepare": "husky install",
    "type-check": "pnpm -r exec tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@chakra-ui/react>@zag-js/focus-visible": "^0.16.0"
    }
  }
}
